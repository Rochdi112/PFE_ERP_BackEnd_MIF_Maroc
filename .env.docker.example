# Backend ENV (Docker Compose)

# Security
SECRET_KEY=change_me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database (compose service hostname is 'db')
POSTGRES_USER=erp_user
POSTGRES_PASSWORD=erp_pass
POSTGRES_DB=erp_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# CORS (add your frontend URL/domain)
CORS_ALLOW_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Uploads (inside container use absolute path)
UPLOAD_DIRECTORY=/app/static/uploads

# Emails (dev)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=user
SMTP_PASSWORD=password
EMAILS_FROM_EMAIL=no-reply@example.com

# Scheduler
ENABLE_SCHEDULER=false
