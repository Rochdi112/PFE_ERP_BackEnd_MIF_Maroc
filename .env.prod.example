# Production example — copy to .env and adjust

# Core / Auth
PROJECT_NAME=ERP Interventions
SECRET_KEY=change-this-to-a-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Postgres (managed or docker `db`)
POSTGRES_USER=erp_user
POSTGRES_PASSWORD=please-change
POSTGRES_DB=erp_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# CORS — restrict to your frontend origins
CORS_ALLOW_ORIGINS=["https://app.example.com"]

# Scheduler (optional)
ENABLE_SCHEDULER=false

# Uploads
UPLOAD_DIRECTORY=app/static/uploads

# SMTP (prod)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=mailer
SMTP_PASSWORD=please-change
EMAILS_FROM_EMAIL=no-reply@example.com

# Host ports (only if exposing directly)
POSTGRES_HOST_PORT=5432
API_HOST_PORT=8000
