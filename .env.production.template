# Production Environment Variables Template
# Copy this file to .env and fill with production values

# ==========================================
# SECURITY SETTINGS
# ==========================================
# Generate a secure random key: openssl rand -hex 32
SECRET_KEY=your-secure-random-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# DATABASE SETTINGS
# ==========================================
POSTGRES_DB=erp_production
POSTGRES_USER=erp_prod_user
POSTGRES_PASSWORD=your-secure-db-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ==========================================
# EMAIL SETTINGS
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@yourcompany.com

# ==========================================
# APPLICATION SETTINGS
# ==========================================
PROJECT_NAME="ERP Production"
API_V1_STR=/api/v1
UPLOAD_DIRECTORY=/app/static/uploads

# ==========================================
# CORS SETTINGS (Production)
# ==========================================
CORS_ALLOW_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# ==========================================
# SCHEDULER SETTINGS
# ==========================================
ENABLE_SCHEDULER=true

# ==========================================
# MONITORING & LOGGING
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==========================================
# BACKUP SETTINGS
# ==========================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=daily
